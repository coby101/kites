    <h2><%= pluralize(employee_phone.errors.count, "error") %> prevented this Employee Phone from saving:</h2>
      <ul>
       <% employee_phone.errors.each do |error| %>
        <li><%= error.full_message %></li>
       <% end %></ul>
  </div>
<% end %>

  <table>
  <tbody>
  <tr>
    <td><div class="field">
  <%= form.label "Employee" %>
  <%= form.collection_select :employee_id, Employee.order(:code), :id, :first_last_name, :prompt => 'please select', :include_blank => false %>
</div></td>
  </tr>
  <tr>
    <td><div class="field">
